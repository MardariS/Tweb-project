@model WEB_Proje.web.Models.Product.ProductModel

@{
    ViewBag.Title = "Add Product";
    Layout = null; // Лучше использовать Layout, если он у вас есть
}

<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <style>
        .form-container {
            max-width: 600px;
            margin: 20px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input[type="text"], input[type="number"], textarea {
            width: 100%;
            padding: 8px;
            box-sizing: border-box;
        }

        .btn-submit {
            background-color: #4CAF50;
            color: white;
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h2>Add Product</h2>

        @using(Html.BeginForm("AddProduct", "Home", FormMethod.Post)) {
            <div class="form-group">
                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { placeholder = "Product name" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description)
                @Html.TextAreaFor(m => m.Description, new { placeholder = "Product description", rows = 4 })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Cantitate)
                @Html.TextBoxFor(m => m.Cantitate, new { type = "number", placeholder = "Quantity" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Price)
                @Html.TextBoxFor(m => m.Price, new { placeholder = "Price in $", type = "number", step = "0.01" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.IsOnSale)
                @Html.CheckBoxFor(m => m.IsOnSale)
            </div>

            <div class="form-group" id="newPriceGroup" style="display: none;">
                @Html.LabelFor(m => m.NewPrice)
                @Html.TextBoxFor(m => m.NewPrice, new { placeholder = "Sale price in $", type = "number", step = "0.01" })
            </div>

            <button type="submit" class="btn-submit">Add Product</button>
        }
    </div>

    <script>
        document.getElementById('IsOnSale').addEventListener('change', function() {
            var newPriceGroup = document.getElementById('newPriceGroup');
            if (this.checked) {
                newPriceGroup.style.display = 'block';
            } else {
                newPriceGroup.style.display = 'none';
                document.getElementById('NewPrice').value = '';
            }
        });
    </script>
</body>
</html>