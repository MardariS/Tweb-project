@model List<WEB_Proje.web.Models.Product.ProductModel>

<!-- Sale products -->
<section id="smart-watches" class="product-store padding-large position-relative">
    <div class="container">
        <div class="row">
            <div class="display-header d-flex justify-content-between pb-3">
                <h2 class="display-7 text-dark text-uppercase">Sale Products</h2>
            </div>

            <div class="swiper product-watch-swiper">
                <div class="swiper-wrapper">
                    @if(Model != null && Model.Any(p => p.IsOnSale)) {
                        foreach(var product in Model.Where(p => p.IsOnSale)) {
                            <div class="swiper-slide">
                                <div class="product-card position-relative">
                                    <div class="image-holder">
                                        <img src="@Url.Content(product.ImagePath ?? "~/Content/Style/images/default.jpg")" alt="@product.Name" class="img-fluid" />
                                    </div>

                                    @if(User.IsInRole("Admin")) {
                                        <div class="delete-concern position-absolute" style="top: 10px; right: 10px;">
                                            @using(Html.BeginForm("DeleteProduct", "Home", new { id = product.Id }, FormMethod.Post)) {
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-danger btn-sm"
                                                        onclick="return confirm('Are you sure you want to delete this product?')">
                                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                                                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                                    </svg>
                                                </button>
                                            }
                                        </div>
                                    }
                                        <div class="cart-concern position-absolute">
                                            <div class="cart-button d-flex">
                                                <a href="#" class="btn btn-medium btn-black">
                                                    Add to Cart
                                                    <svg class="cart-outline"><use xlink:href="#cart-outline"></use></svg>
                                                </a>
                                            </div>
                                        </div>
                                        <div class="card-detail d-flex justify-content-between align-items-baseline pt-3">
                                            <h3 class="card-title text-uppercase">
                                                <a href="#">@product.Name</a>
                                            </h3>
                                            <span class="item-price text-primary">
                                                <s>$@product.Price</s> <span class="text-danger">$@product.NewPrice</span>
                                            </span>
                                        </div>
                                    </div>
                            </div>
                        }
                    } else {
                        <p>No sale products available.</p>
                    }
                </div>
            </div>
        </div>
        </div>
</section>
