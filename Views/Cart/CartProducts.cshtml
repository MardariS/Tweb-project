@model WEB_Proje.web.Models.Product.ShopStuff



@{
    ViewBag.Title = "CartProducts";
    Layout = null;
}

<!DOCTYPE html>



<html>
<head>
<style>
    .form-container {
        max-width: 600px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 5px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"], input[type="number"], textarea {
        width: 100%;
        padding: 8px;
        box-sizing: border-box;
    }

    .btn-submit {
        background-color: #4CAF50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }
</style>

</head>
<body>
    <h2>Cart Ver 0.1</h2>

    @if(Model?.Items != null && Model.Items.Any()) {
        <table class="table">
            <thead>
                <tr>
                    <th>Produs</th>
                    <th>Pret</th>
                    <th>Cantitate</th>
                    <th>Suma</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Items) {
                    <tr>
                        <td>
                            <img src="@item.ImagePath" width="50" />
                            @item.ProductName
                        </td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@((item.Price * item.Quantity).ToString("C"))</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">Total:</td>
                    <td>@Model.GetTotal().ToString("C")</td>
                </tr>
            </tfoot>
        </table>
    } else {
        <p>Cosul e go :(</p>
    }
</body>
</html>