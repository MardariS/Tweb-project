@model WEB_Proje.Domain.ShopStuff.ShopStuff
@using System.Web.Optimization



    
@{
    ViewBag.Title = "CartProducts";
    Layout = null;
}

<!DOCTYPE html>



<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h2 {
            text-align: center;
            color: #555;
        }

        .table {
            width: 80%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

            .table th, .table td {
                padding: 12px 15px;
                border-bottom: 1px solid #ddd;
                text-align: center;
            }

            .table th {
                background-color: #e0e0e0;
                color: #444;
                font-weight: 600;
            }

            .table tfoot td {
                font-weight: bold;
                background-color: #f2f2f2;
            }

        img {
            border-radius: 5px;
        }

        p {
            text-align: center;
            font-size: 18px;
            color: #666;
        }
    </style>



</head>
<body>
    <h2>Cart Ver 0.1</h2>

    @if(Model?.Items != null && Model.Items.Any()) {
        <table class="table">
            <thead>
                <tr>
                    <th>Produs</th>
                    <th>Pret</th>
                    <th>Cantitate</th>
                    <th>Suma</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model.Items) {
                    <tr>
                        <td>
                            <img src="~/Content/Style/images/product-item1.jpg" width="50" alt="@item.ProductName" />
                            @item.ProductName
                        </td>
                        <td>@item.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                        <td>@item.Quantity</td>
                        <td>@((item.Price * item.Quantity).ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US")))</td>
                    </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3">Total:</td>
                    <td>@Model.GetTotal().ToString("C", System.Globalization.CultureInfo.GetCultureInfo("en-US"))</td>
                </tr>
            </tfoot>
        </table>
    } else {
        <p>Cosul e go :(</p>
    }
</body>
</html>